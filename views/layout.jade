doctype html
html
head
	title= title
	link(rel='stylesheet', href='/stylesheets/style.css')
	script(src="/javascripts/jquery-1.11.3.min.js")
	script(src="/javascripts/angular-1.3.15.min.js")
	script(src="/javascripts/index.js")
	script(src="/javascripts/mbfapp.js")
body(ng-app="mbfapp")
	div(id="menu_box", ng-controller="SiteMenuController")
		div(id="menu")
			div(id="logged_box")
				if (!loggedIn)
					a(class="menu_elem", href="login") Log in or Sign up
				else
					div(id="menu_avatar", style="background-image: url(/images/avatars/"+ avatar +");")
					div(id="menu_usermenu_box")
						div(id="menu_username")= username
						div(id="menu_usermenu")
							a(class="usermenu_elem", ng-repeat="m in usermenu", href="{{m.url}}") {{m.name}}
			div(id="menu_list")
				a(class="menu_elem", ng-repeat="m in menuelem", href="{{m.url}}") {{m.name}}
	div(id="banner_box")
	div(id="content_box")
		div(id="content")
			block content
	div(id="footer_box") footer
