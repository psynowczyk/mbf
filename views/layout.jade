doctype html
html
head
	title= title
	link(rel='stylesheet', href='/stylesheets/style.css')
	script(src="/javascripts/jquery-1.11.3.min.js")
	script(src="/javascripts/angular-1.3.15.min.js")
	script(src="/javascripts/index.js")
	script(src="/javascripts/mbfapp.js")
body(ng-app="mbfapp")
	div(id="menu_box", ng-controller="SiteMenuController")
		div(id="menu")
			div
				a(class="menu_elem", ng-repeat="m in menuelem", href="{{m.url}}") {{m.name}}
			div(id="logged_box")
				if (!loggedIn)
					a(class="menu_elem", href="login") Login
				else
					a(class="menu_elem", href="/logout") Logout
	div(id="banner_box")
	div(id="content_box")
		div(id="content")
			block content
	div(id="footer_box") footer
